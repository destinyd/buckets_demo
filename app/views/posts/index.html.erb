<h1>文章列表</h1>

<table class="table">
  <thead>
    <tr>
      <th>标题</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= link_to '修改', edit_post_path(post), class: 'btn btn-default' %></td>
        <td><%= link_to '删除', post, method: :delete, data: { confirm: '你确定?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end -%>
  </tbody>
</table>

<%= link_to '新建文章', new_post_path, class: 'btn btn-primary' %>
