<%= simple_form_for(@post) do |f| %>
  <div class="form-inputs">
    <%= f.input :title, placeholder: '文章标题...' %>
    <%= f.input :content, as: :text, placeholder: '文章内容...' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, '提交', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

